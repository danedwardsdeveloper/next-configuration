{
	"type": "module",
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "tsx testServer.ts",
		"lint": "next lint",
		"format": "biome format . --write && biome check . --write --unsafe",
		"typecheck": "tsc --noEmit --project tsconfig.typecheck.json",
		"tc": "pnpm typecheck",
		"check": "drizzle-kit check  --config drizzle.config.development.ts",
		"check:staging": "drizzle-kit check --config drizzle.config.staging.ts",
		"check:production": "drizzle-kit check --config drizzle.config.production.ts",
		"generate": "drizzle-kit generate --config drizzle.config.development.ts",
		"generate:staging": "drizzle-kit generate --config drizzle.config.staging.ts",
		"generate:production": "drizzle-kit generate --config drizzle.config.production.ts",
		"migrate": "drizzle-kit migrate --config drizzle.config.development.ts",
		"migrate:staging": "drizzle-kit migrate --config drizzle.config.staging.ts",
		"migrate:production": "drizzle-kit migrate --config drizzle.config.production.ts",
		"push": "drizzle-kit push --config drizzle.config.development.ts",
		"studio": "drizzle-kit studio --config drizzle.config.development.ts",
		"studio:staging": "drizzle-kit studio --config drizzle.config.staging.ts",
		"studio:production": "drizzle-kit studio --config drizzle.config.production.ts",
		"test": "vitest",
		"predeploy": "pnpm typecheck && pnpm format && pnpm lint && pnpm build",
		"deploy:staging": "fly deploy --config fly.staging.toml",
		"deploy:production": "fly deploy --config fly.production.toml"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@tailwindcss/postcss": "^4.1.4",
		"@tanstack/react-query": "^5.85.0",
		"@trpc/client": "^11.4.4",
		"@trpc/react-query": "^11.4.4",
		"@trpc/server": "^11.4.4",
		"bcryptjs": "^3.0.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.4",
		"drizzle-zod": "^0.8.3",
		"humanize-plus": "^1.8.2",
		"jsonwebtoken": "^9.0.2",
		"lucide-react": "^0.539.0",
		"next": "15.2.1",
		"pg": "^8.16.3",
		"proper-url-join": "^2.1.2",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"sharp": "^0.33.5",
		"string-optimiser": "^1.0.4",
		"superjson": "^2.2.2",
		"tailwind-merge": "^3.2.0",
		"url-join": "^5.0.0",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@next/eslint-plugin-next": "^15.3.1",
		"@types/bcryptjs": "^3.0.0",
		"@types/express": "^4.17.21",
		"@types/humanize-plus": "^1.8.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^20.17.31",
		"@types/pg": "^8.15.5",
		"@types/react": "^18.3.20",
		"@types/react-dom": "^18.3.6",
		"@vitejs/plugin-react": "^4.4.1",
		"autoprefixer": "^10.4.21",
		"dotenv": "^17.2.1",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.25.1",
		"eslint-config-next": "^15.3.1",
		"eslint-plugin-import": "^2.31.0",
		"express": "^4.21.2",
		"node-fetch": "^3.3.2",
		"postcss": "^8.5.3",
		"puppeteer": "^24.7.2",
		"tailwindcss": "^4.1.4",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.2"
	}
}
