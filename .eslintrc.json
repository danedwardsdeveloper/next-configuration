{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/no-unescaped-entities": "warn",
    "react-hooks/exhaustive-deps": "off",
    "no-unreachable": "warn",
    "no-unreachable/auto-fix": "off",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "ignoreTypeValueShadow": true,
    "ignoreFunctionTypeParameterNameValueShadow": true,
    "@typescript-eslint/no-non-null-assertion": "warn",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true,
        "args": "none"
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "warn",
      {
        "builtinGlobals": true,
        "hoist": "all",
        // prettier-ignore
        "allow": [
        "context", "data", "description", "Document", "email", "error", "event", "global", "id", "Image", "message", "name", "params", "password", "path", "props", "query", "reject", "req", "Request", "res", "resolve", "Response", "result", "scrollY", "session", "status", "text", "title", "top", "type", "url", "user", "value"
        ]
      }
    ],
    "no-restricted-syntax": [
      "warn",
      {
        "selector": "TSEnumDeclaration",
        "message": "Use union types or const objects instead of enums."
      }
    ]
  }
}
